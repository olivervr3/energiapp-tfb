{
  "name": "energiapp-tfb-production",
  "version": "2.0.0",
  "description": "Plataforma integrada de análisis de consumo energético doméstico - Servidor de Producción",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo \"Backend no requiere compilación\"",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "deploy": "npm run build && npm start",
    "production": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "buildCommand": "npm install",
  "startCommand": "npm start",
  "keywords": [
    "energia",
    "iot",
    "machine-learning",
    "react",
    "node",
    "tfb",
    "universidad"
  ],
  "author": "Estudiante TFB",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/energiapp-tfb.git"
  }
}
